if posts.length == 0
  p No available posts...
each post in posts
  div.post
    div.row
      h3.col-sm-auto.text-break= post.dataValues.title
      p.col-sm-6.post-date= post.dataValues.date
    if post.image !== ''
      div.text-center
        img.post-image(src="/images/" + post.image, alt="Post image")
    p.text-break= post.dataValues.abstract
  div.post-info
    a.col-sm-auto(href="user/" + post.dataValues.User.id,
    target="_blank",
    rel="noopener noreferrer")= "Author: " + post.dataValues.User.name + " " + post.dataValues.User.lastName
    a.col-sm-4(href="posts/" + post.dataValues.id)= "Comments: " + post.commentsCount

include post_navigation.pug
